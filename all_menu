#!/bin/bash

ask=`zenity --list --title="Ada LoveLace Menu" --text="Seleccione la acciÃ³n que desea realizar" --print-column="2" --column="icon" --column="action" "â†º" "Reiniciar" "ðŸ“·" "CÃ¡mara" "ðŸž‹" "Calibrador" "ðŸ–‰ " "Abrir OpenBoard" "ðŸ—™" "Cerrar OpenBoard" --width=275 --height=222 --hide-header --window-icon=/usr/local/bin/nur_icon.png`

if [ "$ask" == "Reiniciar" ]; then
  texto="Â¿Seguro que quieres <span weight=\"bold\" foreground=\"red\">reiniciar</span>?"
  zenity --question --title="Reiniciar" --width=250 --text="${texto}"
  ans=$?
  if [ $ans -eq 0 ]; then
    reboot
  else
    all_menu
  fi    
fi

if [ "$ask" == "CÃ¡mara" ]; then
  mplayer tv:// -tv driver=v4l2:device=/dev/video0:width=1024:height=768:fps=30:outfmt=yuy2
fi

if [ "$ask" == "Calibrador" ]; then
  calibrate_matrix
fi

if [ "$ask" == "Abrir OpenBoard" ]; then
  launch_openboard
fi

if [ "$ask" == "Cerrar OpenBoard" ]; then
  pkill openboard
fi
exit 0
